{% extends '::base.html.twig' %}
{% block title %} Mobile Presentation Control Unit {% endblock %}


{% block body %}

	<div id="form_login">
		<h3>Login to existing Session</h3>
		<form action="{{ path('less_mpcu_login') }}" method="POST">
			<label for="username">Username:</label>
			<input type="text" id="username" name="_username" value="{{ last_username}}" />
			
			<label for="password">Password:</label>
			<input type="password" id="password" name="_password" />
			
			<input type="hidden" name="_target_path" value="/home">
			<button type="submit">Login</button>
	</div>
	<div id="error">{{ error }}</div>
	
	<span>Dont have a login?<a href="{{ path('less_mpcu_register') }}">Register here</a></span>
{% endblock %}

